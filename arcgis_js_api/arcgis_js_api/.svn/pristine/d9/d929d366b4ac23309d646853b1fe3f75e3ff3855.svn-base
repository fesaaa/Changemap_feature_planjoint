<script>
  (function() {
    if ( window.location.hash.length === 0 ) {
      return;
    }

    // got a hash, redirect to new static file
    // remove index.html if it's in the URL
    var href = window.location.href.replace("index.html", "");
    // split on # to figure out where to redirect
    var urlPieces = href.split("#");
    if ( urlPieces.length === 1 ) {
      console.log("no where new to go...");
      return;
    }
    // baseUrl is everything up to the hash but doesn't include "index.html"
    var baseUrl = urlPieces[0];
    // classInfo is the class name and optionally a property or method
    var classInfo = urlPieces[1].split("/");
    var className;
    if ( classInfo.length > 1 ) {
      className = classInfo[0] + ".html#" + classInfo[1];
    } else {
      className = classInfo[0] + ".html";
    }
    // go to the new URL
    window.location = baseUrl + className;
  })();
</script> <!-- sub 5:  add script to redirect old hash based URLs to static pages and google analytics-->

